<div class="row">
  <div class="col-md-6">
    <div class="card border-info mb-3, card-header">
      <h1>ToDos No Completados</h1>
      <% @todos.each do |todo| %>
        <h3><%= todo.description if !todo.completed %></h3>
      <% end %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card border-info mb-3, card-header">
      <h1>ToDos Completados</h1>
      <% @todos.each do |todo| %>
        <h3><%= todo.description if todo.completed%></h3>
      <% end %>
    </div>
  </div>
</div>
